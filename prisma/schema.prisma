// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(uuid())
  name          String?
  email         String     @unique
  password_hash String
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  Training      Training[]
  Exercise      Exercise[]

  @@map("users")
}

model Training {
  id              String   @id @default(uuid())
  name            String
  number_of_times Int
  active          Boolean
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user             User               @relation(fields: [user_id], references: [id])
  user_id          String
  Routine_Training Routine_Training[]
  Exercise         Exercise[]

  @@map("trainings")
}

model Routine_Training {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  startedAt DateTime
  updatedAt DateTime @updatedAt

  training         Training           @relation(fields: [training_id], references: [id])
  training_id      String
  Routine_Exercise Routine_Exercise[]

  @@map("routine_trainings")
}

model Exercise {
  id          String   @id @default(uuid())
  name        String
  series      Int
  repetitions Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  training    Training @relation(fields: [training_id], references: [id])
  training_id String
  Weight      Weight[]

  @@map("exercises")
}

model Routine_Exercise {
  id         String   @id @default(uuid())
  startedAt  DateTime @default(now())
  finishedAt DateTime @updatedAt

  routine_training    Routine_Training @relation(fields: [routine_training_id], references: [id])
  routine_training_id String
  Weight              Weight[]

  @@map("routine_exercises")
}

model Weight {
  id        String   @id @default(uuid())
  value     Float
  createdAt DateTime @default(now())

  exercise    Exercise? @relation(fields: [exercise_id], references: [id])
  exercise_id String?

  exercise_routine    Routine_Exercise? @relation(fields: [exercise_routine_id], references: [id])
  exercise_routine_id String?

  @@map("weights")
}
